pipeline {
    agent any
    
    stages {
        stage('🚀 測試階段') {
            steps {
                echo '🔍 開始測試...'
                sh 'echo "當前目錄: $(pwd)"'
                sh 'echo "檔案列表: $(ls -la)"'
                sh 'echo "Git 狀態: $(git status)"'
            }
        }
        
        stage('📁 檢查檔案') {
            steps {
                echo '📁 檢查重要檔案...'
                sh 'ls -la Jenkinsfile'
                sh 'ls -la terraform/'
                sh 'ls -la dashboard.json'
            }
        }
        
        stage('🔧 測試 Terraform') {
            steps {
                echo '🔧 測試 Terraform...'
                dir('terraform') {
                    sh 'terraform --version'
                    sh 'ls -la'
                }
            }
        }
    }
    
    post {
        always {
            echo '✅ 測試完成'
        }
    }
}
